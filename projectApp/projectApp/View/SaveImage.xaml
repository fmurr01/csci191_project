<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:d="http://xamarin.com/schemas/2014/forms/design"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d"
             x:Class="projectApp.View.SaveImage">
    <ContentPage.Content>
        <Grid BackgroundColor="#265077" >
            
            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>  <!-- image preview -->
                <RowDefinition Height="40"/> <!-- info rows -->
                <RowDefinition Height="40"/>
                <RowDefinition Height="40"/>
                <RowDefinition Height="40"/>
                <RowDefinition Height="70"/>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="130"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <Image x:Name="imageIcon" 
                   Grid.Column="0"
                   Grid.ColumnSpan="2"
                   Margin="0, 20, 0, 20"
                   >
                <Image.GestureRecognizers>
                <!-- Can also set a swipe threshold on each gesture recognizer -->
                <SwipeGestureRecognizer Direction="Up" Swiped="OnSwiped"/>
                <SwipeGestureRecognizer Direction="Down" Swiped="OnSwiped"/>
                </Image.GestureRecognizers>
            </Image> <!-- image preview spans 2 rows -->
            
            <!-- IMAGE NAME -->
            <Label Text="Name: "
                   FontSize="Medium"
                   TextColor="#8FC1E3"
                   Grid.Row="1"
                   Grid.Column="0"
                   HorizontalTextAlignment="End"
                   HorizontalOptions="EndAndExpand"
                   VerticalOptions="Center"/>
            <Frame Grid.Row="1" 
                   Grid.Column="1"
                   HorizontalOptions="FillAndExpand"
                   VerticalOptions="FillAndExpand"
                   Padding="2"
                   Margin="0, 0, 15, 0"
                   CornerRadius="7"
                   BorderColor="#5085A5"
                   BackgroundColor="#5085A5">
                <Entry x:Name="imageName_label" Text="IMAGE" 
                       TextColor="#F7F9fB"
                       FontSize="13"
                       HorizontalTextAlignment="Start"
                       HorizontalOptions="Start"
                       BackgroundColor="#5085A5"
                       Margin="0, 0, 0, 0"/>
            </Frame>
            
            <!-- TIMESTAMP -->

            <Label Text="Timestamp: " 
                   FontSize="Medium"
                   TextColor="#8FC1E3"
                   Grid.Column="0" 
                   Grid.Row="2"
                   HorizontalTextAlignment="End"
                   HorizontalOptions="EndAndExpand"
                   VerticalOptions="Center"/>
            <Frame Grid.Row="2" 
                   Grid.Column="1"
                   HorizontalOptions="FillAndExpand"
                   VerticalOptions="FillAndExpand"
                   Padding="2"
                   Margin="0, 0, 15, 0"
                   CornerRadius="7"
                   BorderColor="#5085A5"
                   BackgroundColor="#5085A5">
                <Label x:Name="timestamp_label"
                       Text="TIMESTAMP" 
                       TextColor="#F7F9fB"
                       HorizontalTextAlignment="Start"
                       HorizontalOptions="Start"
                       VerticalOptions="FillAndExpand"
                       VerticalTextAlignment="Center"
                       BackgroundColor="#5085A5"
                       Margin="10, 0, 0, 0"/>
            </Frame>


            <!-- LOCATION -->
            <Label Text="Location: " 
                   FontSize="Medium"
                   TextColor="#8FC1E3"
                   Grid.Column="0" 
                   Grid.Row="3"
                   HorizontalTextAlignment="End"
                   HorizontalOptions="EndAndExpand"
                   VerticalOptions="Center"/>
            <Frame Grid.Row="3" 
                   Grid.Column="1"
                   HorizontalOptions="FillAndExpand"
                   VerticalOptions="FillAndExpand"
                   Padding="2"
                   Margin="0, 0, 15, 0"
                   CornerRadius="7"
                   BorderColor="#5085A5"
                   BackgroundColor="#5085A5">
                <Label x:Name="location_label" Text="LOCATION" 
                       TextColor="#F7F9fB"
                       HorizontalTextAlignment="Start"
                       HorizontalOptions="Start"
                       VerticalOptions="FillAndExpand"
                       VerticalTextAlignment="Center"
                       BackgroundColor="#5085A5"
                       Margin="10, 0, 0, 0"/>
            </Frame>
            
            <!-- CATEGORY -->
            <Label Text="Category: " 
                   FontSize="Medium"
                   TextColor="#8FC1E3"
                   Grid.Column="0" 
                   Grid.Row="4"
                   HorizontalTextAlignment="End"
                   HorizontalOptions="EndAndExpand"
                   VerticalOptions="Center"/>
            <Frame Grid.Row="4" 
                   Grid.Column="1"
                   HorizontalOptions="FillAndExpand"
                   VerticalOptions="FillAndExpand"
                   Padding="2"
                   Margin="0, 0, 15, 0"
                   CornerRadius="7"
                   BorderColor="#5085A5"
                   BackgroundColor="#5085A5">
                <Label x:Name="category_label"
                       Text="Swipe Category" 
                       TextColor="#F7F9fB"
                       HorizontalTextAlignment="Start"
                       HorizontalOptions="Start"
                       VerticalOptions="FillAndExpand"
                       VerticalTextAlignment="Center"
                       BackgroundColor="#5085A5"
                       Margin="10, 0, 0, 0"/>
            </Frame>
             
            <!-- CONFIRM SAVE BUTTON -->
            <Button x:Name="confirmSave_button" Clicked="ConfirmSave_button_Clicked"
                    Text="Save" 
                    FontSize="Large"
                    Grid.Row="5" 
                    Grid.ColumnSpan="2"
                    HorizontalOptions="FillAndExpand"
                    VerticalOptions="FillAndExpand"
                    CornerRadius="10"
                    Margin="15, 10, 15 , 10"
                    BackgroundColor="#90CCF4"/>

        </Grid>
    </ContentPage.Content>
</ContentPage>
    
